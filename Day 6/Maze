def turn_right():
    turn_left()
    turn_left()
    turn_left()
right_turn=0
while not at_goal() :
    if wall_on_right():
        if front_is_clear():
            move()
            right_turn=0
        else:
            turn_left()
            roght_turn=0
       
    else:
        if right_turn!=3:
            turn_right()
            move()
            right_turn+=1
        elif wall_in_front():
            turn_left()
        else:
            move()
